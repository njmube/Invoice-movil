<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo de la vista -->
    <solid android:color="@color/colorFondoLayout"></solid>

    <!-- Color y ancho del borde del elemento -->
    <stroke
        android:width="1dp"
        android:color="@color/colorBorde"></stroke>

    <!-- Si queremos añadir algún padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"></padding>

    <!-- Aquí indicamos el radio a aplicar a las esquinas -->
    <corners android:radius="5dp"></corners>

</shape>
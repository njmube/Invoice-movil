<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ec.bigdata.facturaelectronicamovil.pantalla.FiltroRangoFechas">

    <include
        layout="@layout/toolbar_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    />

    <TableLayout
        android:id="@+id/table_layout_rango_fechas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/text_view_fecha_inicial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/etiqueta_fecha_vacia" />

            <Button
                android:id="@+id/button_dialog_fecha_inicial"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_fecha_inicio"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/text_view_fecha_final"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/etiqueta_fecha_vacia" />

            <Button
                android:id="@+id/button_dialog_fecha_final"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_fecha_final"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:padding="@dimen/normal_padding"
            android:layout_marginTop="100dp"
            android:gravity="center">

            <Button
                android:id="@+id/button_aceptar"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/etiqueta_cancelar_aceptar"
                android:textStyle="bold" />


        </TableRow>

    </TableLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forma_naranja"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/image_view_icono_advertencia"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_warning_orange" />

        <TextView
            android:id="@+id/text_view_mensaje_toast_advertencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nombre_app"
            android:textAppearance="@android:style/TextAppearance.Holo.Medium"
            android:textSize="16dp"
            android:layout_gravity="center_vertical"
            android:padding="5dp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_titulo_componente_factura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_app"
        android:paddingTop="10dp"
        android:textAppearance="@android:style/TextAppearance.Holo.Large" />

    <ImageView
        android:id="@+id/image_view_imagen_componentes_factura"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:padding="@dimen/normal_padding"
        android:contentDescription="@string/descripcion_imagen_componentes_factura"
        android:src="@drawable/ic_thumb_down_black_48dp" />

</RelativeLayout>